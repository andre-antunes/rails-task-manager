<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p class="each">
    <input type="checkbox" disabled <%= 'checked' if task.completed %>>
    <%= link_to task.title, task_path(task["id"]) %>
    <%= link_to "", task_path(task), class: "far fa-trash-alt",
      method: :delete,
      data: { confirm: "Are you sure?" } %>
 </p>
<% end %>

<div class="link-add">
  <p> <%= link_to "+ Add a new task", new_path %> </p>
</div>

