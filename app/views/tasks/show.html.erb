<h1> <%= @task.title %> </h1>

<div class="box">
  <p> <%= @task.description %> </p>
</div>

<div class="completed">
  <% if @task.completed %>
    <input type="checkbox" disabled checked><span> This task is completed</span>
  <% else %>
    <input type="checkbox" disabled><span> This task is not completed yet</span>
  <% end %>
</div>

<div class="link">
  <p> <%= link_to "Edit task", edit_path %> </p>
</div>

<div class="link">
  <p> <%= link_to "Back to all tasks", tasks_path %> </p>
</div>
